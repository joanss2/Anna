<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="164dp"
    android:layout_height="260dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="20dp"
    android:backgroundTint="#A7BEFF"
    app:cardCornerRadius="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:background="#FFFFFF"
            android:padding="5dp">

            <TextView
                android:id="@+id/adTemplateTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:fontFamily="@font/magra_bold"
                android:paddingRight="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/adMoreOptions"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_more" />


        </LinearLayout>

        <ImageView
            android:id="@+id/adTemplatePicture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/adTemplateDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="4"
            android:fontFamily="@font/magra"
            android:padding="5dp"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/magra"
                android:text="@string/ends"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adTemplateDeadline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/magra"
                android:inputType="date"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>

