<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageDiscountUsedDetail"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/likeDiscountUsedDetail"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/ic_favourite" />

        <ImageView
            android:id="@+id/commentDiscountUsedDetail"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/ic_comment" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleDiscountUsedDetail"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/magra"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/descriptionDiscountUsedDetail"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="#68ECB5B5"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/magra"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/magra"
            android:textColor="@color/black"
            android:text="@string/discountPercentageUsedDetail"/>

        <TextView
            android:id="@+id/discountPercentageEditTextDetail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/magra" />
    </LinearLayout>

