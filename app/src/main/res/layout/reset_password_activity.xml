<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/textviewResetPassword"
        android:layout_width="284dp"
        android:layout_height="46dp"
        android:background="#40C0F4B7"
        android:gravity="center"
        android:hint="@string/email"
        android:fontFamily="@font/magra"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451" />

    <Button
        android:id="@+id/buttonResetPasswordActivity"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:text="Send mail"
        android:fontFamily="@font/magra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewResetPassword"
        app:layout_constraintVertical_bias="0.178" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="258dp"
        android:layout_height="108dp"
        android:text="Please, introduce your email you registered with. Then you will receive automatically an email with following instructions to make the corresponding changes. Thank you."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="@font/magra"
        app:layout_constraintBottom_toTopOf="@+id/textviewResetPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.825" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="65dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.855"
        app:srcCompat="@drawable/ic_info" />
</androidx.constraintlayout.widget.ConstraintLayout>