<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="164dp"
    android:layout_height="260dp"
    android:backgroundTint="#80A0FD"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="5dp"
    app:cardCornerRadius="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adTemplateTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/magra_bold" />

        <ImageView
            android:id="@+id/adTemplatePicture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" />

        <TextView
            android:id="@+id/adTemplateDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="4"
            android:textSize="16sp"
            android:fontFamily="@font/magra"/>

        <TextView
            android:id="@+id/adTemplateDeadline"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:inputType="date"
            android:textSize="12sp"
            android:fontFamily="@font/magra"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>

